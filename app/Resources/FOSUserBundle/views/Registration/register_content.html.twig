{% trans_default_domain 'FOSUserBundle' %}

<main id="main-container" class="container main-flex" role="main">
<div class="signin-form">
    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register')}) }}

    <h2>{{ 'registration.create_account'|trans({}, 'messages') }}</h2>
    <p class="hint-text">{{ 'registration.signup_social'|trans({}, 'messages') }}</p>
    <div class="social-btn text-center">
        <a href="#" class="btn up btn-primary btn-lg" onclick="fb_login()"><i class="fa fa-facebook"></i> Facebook</a>
        <a href="#" class="btn up btn-info btn-lg"><i class="fa fa-twitter"></i> Twitter</a>
        <a href="#" class="btn up btn-danger btn-lg"><i class="fa fa-google"></i> Google</a>
    </div>
    <div class="or-seperator"><b>{{ 'security.login.or'|trans({}, 'messages') }}</b></div>
        <div class="form-group">
            <div class="row">
                <div class="col-6">
                    {{ form_widget(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'form.firstname'|trans({}, 'messages'), 'required': 'required' }}) }}
                    {{ form_errors(form.firstname) }}
                </div>
                <div class="col-6">
                    {{ form_widget(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'form.lastname'|trans({}, 'messages'), 'required': 'required' }}) }}
                    {{ form_errors(form.lastname) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg', 'placeholder': 'form.username'|trans, 'required': 'required' }}) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'placeholder': 'form.email'|trans, 'required': 'required' }}) }}
              {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'placeholder': 'form.password'|trans, 'required': 'required' }}) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'placeholder': 'form.password_confirmation'|trans, 'required': 'required' }}) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
        <div class="form-group">
            <button type="submit" name="commit" class="btn btn-success btn-lg btn-block signup-btn">{{ 'registration.submit'|trans }}</button>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}

    <div class="text-center">{{ 'registration.exist_account'|trans({}, 'messages') }} <a href="{{ path('fos_user_security_login') }}">{{ 'registration.login_here'|trans({}, 'messages')}}</a></div>
</div>
</main>
